<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="TinyWhatsApp" Height="800" Width="1300">
    <Grid x:Name="GridChats">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="556*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="LstBoxChats" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,821,0" Grid.ColumnSpan="3" SelectionChanged="LstBoxChats_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListBox x:Name="LstBoxMsgs" Margin="296,0,-5,0" Grid.Column="2"/>
        <TextBox x:Name="txtNewMsg" Grid.Column="2" HorizontalAlignment="Left" Margin="296,727,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="643" Height="57" Visibility="Hidden"/>
        <Button x:Name="btnSend" Grid.Column="2" Content="Send" HorizontalAlignment="Left" Height="48" Margin="944,726,0,0" VerticalAlignment="Top" Width="168" Click="btnSend_Click" Visibility="Hidden"/>
    </Grid>
</Window>
