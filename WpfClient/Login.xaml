<Window x:Class="WpfClient.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" ResizeMode="NoResize" Icon="/icon.jpg">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/bg.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Benutzername" Margin="10" Foreground="White" FontSize="14"/>
            <TextBox x:Name="txtUser" Width="200" Margin="10"/>
            <TextBlock Text="Passwort" Margin="10" FontSize="14" Foreground="White"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="10"/>
            <Button x:Name="loginBtn" Content="Login" Width="100" Margin="10" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
